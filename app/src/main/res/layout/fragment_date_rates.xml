<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_paddind">

    <android.support.v7.widget.CardView
        android:id="@+id/card_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fragment_vertical_margin">

        <TextView
            style="@style/TextViewMaterialMediumBold"
            android:text="@string/click_to_make_a_request"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_click_request"
            android:textAlignment="center"
            android:gravity="center_horizontal"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_eur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_button"
        android:layout_marginTop="@dimen/fragment_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_eur"
                android:text="@string/eur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:id="@+id/tv_nbu_eur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_eur"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:id="@+id/tv_pb_eur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nbu_eur"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:layout_marginBottom="@dimen/card_vertical_margin"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_rur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_eur"
        android:layout_marginTop="@dimen/fragment_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_rur"
                android:text="@string/rur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:id="@+id/tv_nbu_rur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_rur"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:id="@+id/tv_pb_rur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nbu_rur"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:layout_marginBottom="@dimen/card_vertical_margin"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_usd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_rur"
        android:layout_marginTop="@dimen/fragment_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_usd"
                android:text="@string/usd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:id="@+id/tv_nbu_usd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_label_usd"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            <TextView
                android:id="@+id/tv_pb_usd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_nbu_usd"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:layout_marginBottom="@dimen/card_vertical_margin"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>