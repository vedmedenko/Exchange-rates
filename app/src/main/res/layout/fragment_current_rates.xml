<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/fragment_paddind">

    <android.support.v7.widget.CardView
        android:id="@+id/card_eur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fragment_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_eur"
                android:text="@string/eur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_eur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:layout_marginBottom="@dimen/card_vertical_margin"
                android:layout_below="@+id/tv_label_eur"
                android:gravity="center_horizontal"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_rur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_eur"
        android:layout_marginTop="@dimen/fragment_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_rur"
                android:text="@string/rur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_rur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:layout_marginBottom="@dimen/card_vertical_margin"
                android:layout_below="@+id/tv_label_rur"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_usd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_rur"
        android:layout_marginTop="@dimen/fragment_vertical_margin">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_label_usd"
                android:text="@string/usd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textAlignment="center"
                android:gravity="center_horizontal"/>

            <TextView
                android:id="@+id/tv_usd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/card_vertical_margin"
                android:layout_marginBottom="@dimen/card_vertical_margin"
                android:layout_below="@+id/tv_label_usd"
                android:gravity="center_horizontal"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>